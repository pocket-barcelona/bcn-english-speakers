---
import Tag, { type TagColors } from './elements/tag.astro';

interface Props {
	category: string;
  size?: 'small' | 'medium';
}

let { category, size = 'medium' } = Astro.props;

const label = category ?? '';
category = label.toLowerCase();

// default color for unknown category tags
let color: TagColors = 'info';

if (category === 'going out') {
  color = 'emerald';
} else if (category === 'getting around') {
  color = 'amber';
} else if (category === 'gastro') {
  color = 'pink';
} else if (category === 'guides') {
  color = 'info';
} else if (category === 'news') {
  color = 'blue';
}

---

<Tag color={color} size={size}>
  {label}
</Tag>