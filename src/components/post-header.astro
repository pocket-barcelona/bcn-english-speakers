---
import type { CollectionEntry } from 'astro:content';
import PostCategoryTag from './post-category-tag.astro';
import Button from './elements/button.astro';

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;

---

<div class="mx-auto max-w-4xl mt-8 lg:mt-16">
  <a
    href="/blog"
    class="bg-gray-100 px-5 py-3 mb-4 rounded-md inline-block hover:bg-gray-200 transition"
    >‚Üê Back to Blog</a
  >
  <div class="justify-between flex flex-row items-center mb-4">
    <PostCategoryTag category={post.data.category} size='small'></PostCategoryTag>
    <div class="flex gap-1 my-2 items-center justify-end flex-wrap md:flex-nowrap">
      <span class="text-slate-800 tracking-tight whitespace-nowrap font-medium text-xs">
        Published:
      </span>
      <time
        class="text-gray-700 whitespace-nowrap tracking-tight text-xs font-light"
        datetime={post.data.publishDate.toISOString()}>
        {post.data.publishDate.toDateString()}
      </time>
    </div>
  </div>
  
  <h1
    class="text-3xl md:text-4xl lg:text-5xl font-bold lg:tracking-tight mt-0 lg:leading-tight" style="text-wrap: balance;">
    {post.data.title}
  </h1>
  <p class="my-4 text-lg md:text-xl leading-snug tracking-tight prose">{post.data.snippet}</p>
</div>